<div class="row" style="margin-top:10px;">
  <div class="col-xs-12 col-lg-4 pull-right">
    <div class="panel panel-primary">
      <div class="panel-heading"><h3 class="panel-title">Sign In </h3></div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field row">
              <%= f.label :email, :class=>"col-lg-4" %>
              <%= f.email_field :email, autofocus: true, :class=>"col-lg-7" %>
            </div>
            <div class="field row">
              <%= f.label :password, :class=>"col-lg-4"  %>
              <%= f.password_field :password, autocomplete: "off", :class=>"col-lg-7" %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="field row">
                <%= f.label :remember_me, :class=>"col-lg-4" %>
                <%= f.check_box :remember_me  %>
              </div>
            <% end -%>
            <div class="actions">
              <%= f.submit "Log in", :class=>"btn btn-primary btn-block" %>
            </div>
        <% end %>
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>