<div class="row" style="margin-top:10px;">
  <div class="col-xs-12 col-lg-4 pull-right">
    <div class="panel panel-primary">
      <div class="panel-heading"><h3 class="panel-title"><h5>New <%= resource_name.to_s.humanize %></h5></div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="field row">
            <%= f.label :first_name, :class=>"col-xs-4" %>
            <%= f.text_field :first_name, autofocus: true, :class=>"col-xs-7" %>
          </div>

          <div class="field row">
            <%= f.label :last_name, :class=>"col-xs-4" %>
            <%= f.text_field :last_name, :class=>"col-xs-7" %>
          </div>
          <div class="field row">
            <%= f.label :email, :class=>"col-xs-4" %>
            <%= f.email_field :email, autofocus: true, :class=>"col-xs-7" %>
          </div>

          <div class="field row">
            <%= f.label :password, autocomplete: "off", :class=>"col-xs-4" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", :class=>"col-xs-7" %>
          </div>
          <br/>

          <div class="field row">
            <%= f.label :password_confirmation, :class=>"col-xs-4" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"col-xs-7" %>
          </div>

          <div class="actions">
            <%= f.submit "Submit", :class=>"btn btn-primary btn-block" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
